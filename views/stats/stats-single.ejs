  <!doctype html>
<html lang="en-us">
<head>
  <meta charset="utf-8">
  <title>Add Some Stats!</title>
  <link rel="stylesheet" type="text/css" href="styles/style.css">
</head>
<body>

  <% include ../partials/header %>

<div class='healthStats'>
      <p><%= stats.date %></p>
      <p><%= stats.weight %> lbs</p>
      <p><%= stats.bmi %></p>
      <p><%= stats.blood_pressure %></p>
      <p><%= stats.heart_rate %> bpm</p>
      <p><%= stats.calorie_intake %></p>
      <p><%= stats.hours_of_sleep %></p>
      <p><%= stats.mood %></p>
      <p><%= stats.notes %></p>
  <a href="/stats/<%= data.id %>/edit"> Edit this Entry </a>
  <form action="/stats/<%= data.id %>?_method=Delete" method="Post">
    <input type="Submit" value="Delete"/>
  </form>
  <a href='/stats/'>See all Entries</a>
</div>


  <% include ../partials/footer %>
</body>
</html>
